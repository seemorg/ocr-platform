generator client {
  provider        = "prisma-client-js"
  output          = "../../../node_modules/@usul-ocr/client/db"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id          String  @id @default(cuid())
  arabicName  String
  airtableId  String? @unique
  englishName String?
  books       Book[]
}

model Book {
  id              String     @id @default(cuid())
  pdfUrl          String
  totalPages      Int        @default(0)
  reviewedPages   Int        @default(0)
  authorId        String
  status          BookStatus @default(UNPROCESSED)
  airtableId      String?    @unique
  arabicName      String?
  englishName     String?
  assignedGroupId String?
  splitsData      Json       @default("{}")
  createdAt       DateTime   @default(now())
  Group           Group?     @relation(fields: [assignedGroupId], references: [id])
  author          Author     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  Page            Page[]
}

model Account {
  id                       String  @id
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  User                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Group {
  id              String            @id
  name            String
  createdAt       DateTime          @default(now())
  Book            Book[]
  GroupMembership GroupMembership[]
}

model GroupMembership {
  id        String    @id
  role      GroupRole @default(MEMBER)
  userId    String
  groupId   String
  createdAt DateTime  @default(now())
  Group     Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)
  User      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
}

model Page {
  id              String        @id
  pageNumber      Int?
  volumeNumber    Int?
  pdfPageNumber   Int
  content         String?
  footnotes       String?
  bookId          String
  reviewed        Boolean       @default(false)
  reviewedAt      DateTime?
  reviewedById    String?
  ocrContent      String
  ocrFootnotes    String?
  flags           PageFlag[]
  ocrStatus       PageOcrStatus @default(COMPLETED)
  totalWords      Int           @default(0)
  editorialNotes  String?
  Book            Book          @relation(fields: [bookId], references: [id], onDelete: Cascade)
  User            User?         @relation(fields: [reviewedById], references: [id])

  @@unique([bookId, pdfPageNumber])
  @@index([totalWords])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id              String            @id
  name            String?
  email           String?           @unique
  emailVerified   DateTime?
  image           String?
  role            UserRole          @default(USER)
  Account         Account[]
  GroupMembership GroupMembership[]
  Page            Page[]
  Session         Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum BookStatus {
  UNPROCESSED
  PROCESSING
  IN_REVIEW
  COMPLETED
}

enum GroupRole {
  ADMIN
  MEMBER
}

enum PageFlag {
  NEEDS_ADDITIONAL_REVIEW
  EMPTY
}

enum PageOcrStatus {
  UNPROCESSED
  PROCESSING
  COMPLETED
  FAILED
}

enum UserRole {
  ADMIN
  REVIEWER
  USER
}
